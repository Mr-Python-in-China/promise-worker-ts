{
  "name": "@mr.python/promise-worker-ts",
  "version": "1.0.0",
  "description": "Type-safe Promise-based Web Worker communication with TypeScript, supporting tagged messages and transferable objects",
  "author": "Peter Batory-Bernardin, MrPython",
  "license": "MIT",
  "type": "module",
  "main": "./dist/promise-worker-ts.umd.cjs",
  "module": "./dist/promise-worker-ts.es.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/promise-worker-ts.es.js",
      "require": "./dist/promise-worker-ts.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "web-workers",
    "promises",
    "typescript",
    "worker",
    "transferables",
    "thread",
    "concurrent",
    "parallel",
    "async"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mr-Python-in-China/promise-worker-ts.git"
  },
  "bugs": {
    "url": "https://github.com/Mr-Python-in-China/promise-worker-ts/issues"
  },
  "homepage": "https://github.com/Mr-Python-in-China/promise-worker-ts#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitest/browser": "^3.0.9",
    "@vitest/web-worker": "^3.0.9",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "typescript": "^5.7.3",
    "vite": "^6.2.2",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.9"
  }
}
